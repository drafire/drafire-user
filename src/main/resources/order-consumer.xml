<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans.xsd        http://code.alibabatech.com/schema/dubbo        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!--当前项目在整个分布式架构里面的唯一名称，计算依赖关系的标签-->
    <dubbo:application name="order-provider" owner="drafire"/>

    <!--dubbo这个服务所要暴露的服务地址所对应的注册中心-->
    <dubbo:registry protocol="zookeeper" address="192.168.109.128:2181,192.168.109.129:2181,192.168.109.130:2181,192.168.109.131:2181"/>

    <!--生成一个远程服务的调用代理-->
    <!--这里可以不指定协议，如果有多个版本，则需要指定版本号-->
    <!--这里竟然不能和provider那样写成：hessian,dubbo，多个协议写在一块-->
    <dubbo:reference id="orderServices2" interface="com.drafire.IOrderServices" protocol="dubbo" version="2.0.0" async="true"/>
    <!--也可以分开写，一个用于dubbo，一个用hession，或者其他的协议-->
    <!--<dubbo:reference id="orderServices3" interface="com.drafire.IOrderServices" protocol="dubbo" version="2.0.0" async="true"/>-->

    <dubbo:reference id="orderServices1" interface="com.drafire.IOrderServices" protocol="hessian" version="1.0.0"/>

</beans>